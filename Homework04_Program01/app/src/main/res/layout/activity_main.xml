<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="316dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_m_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_v_m_email"
        app:srcCompat="@drawable/sign_in_email" />

    <EditText
        android:id="@+id/et_v_m_email"
        android:layout_width="270dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:hint="EMAIL"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="316dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_m_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_v_m_password"
        app:srcCompat="@drawable/sign_in_password" />

    <EditText
        android:id="@+id/et_v_m_password"
        android:layout_width="270dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:fontFamily="@font/bebas_neue"
        android:hint="PASSWORD"
        android:inputType="text"
        android:password="true"
        app:layout_constraintStart_toStartOf="@+id/et_v_m_email"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_m_signIn"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_m_signIn"
        app:layout_constraintStart_toStartOf="@+id/btn_v_m_signIn"
        app:layout_constraintTop_toTopOf="@+id/btn_v_m_signIn"
        app:srcCompat="@drawable/button_sign_in" />

    <Button
        android:id="@+id/btn_v_m_signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:width="120sp"
        android:alpha="0"
        android:text="SIGN IN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_m_signUp"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_m_signUp"
        app:layout_constraintStart_toStartOf="@+id/btn_v_m_signUp"
        app:layout_constraintTop_toTopOf="@+id/btn_v_m_signUp"
        app:srcCompat="@drawable/button_signup" />

    <Button
        android:id="@+id/btn_v_m_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:width="120sp"
        android:alpha="0"
        android:text="SIGN UP"
        app:layout_constraintStart_toStartOf="@+id/btn_v_m_signIn"
        app:layout_constraintTop_toBottomOf="@+id/imageView43" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="259dp"
        android:layout_height="124dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_handyman" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_m_signIn"
        app:srcCompat="@drawable/txt_or" />

</androidx.constraintlayout.widget.ConstraintLayout>